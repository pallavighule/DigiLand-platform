{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@src/*": ["src/*"],
    }
    // "noUnusedLocals": true
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
